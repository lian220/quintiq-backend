# ============================================
# Slack Configuration
# ============================================
SLACK_WEBHOOK_URL_TRADING=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK_URL_ANALYSIS=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK_URL_SCHEDULER=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-YOUR-BOT-TOKEN
SLACK_ENABLED=true
SLACK_CHANNEL=#trading-alerts

# ============================================
# Database Configuration (Local Development)
# ============================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=quantiq
DB_USER=quantiq_user
DB_PASSWORD=quantiq_password

# ============================================
# Kafka Configuration (Local Development)
# ============================================
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================
# MongoDB Configuration (Local Development)
# ============================================
MONGODB_URI=mongodb://quantiq_user:quantiq_password@localhost:27017/stock_trading?authSource=admin
MONGODB_DB_NAME=stock_trading

# ============================================
# KIS API Configuration (Test Values)
# ============================================
KIS_APP_KEY=test_app_key
KIS_APP_SECRET=test_app_secret
KIS_ACCOUNT_NO=00000000000
KIS_BASE_URL=https://openapivts.koreainvestment.com:29443
KIS_REAL_URL=https://openapi.koreainvestment.com:9443
KIS_USE_MOCK=true

# ============================================
# External APIs
# ============================================
# FRED API
FRED_API_KEY=your_fred_api_key_here

# AlphaVantage API
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here

# ============================================
# Security Settings
# ============================================
# AES-256 암호화 키 (최소 32자 이상 필수)
# KIS API Secret 등 민감한 정보를 암호화하여 DB에 저장
APP_ENCRYPTION_KEY=CHANGE_THIS_TO_32_CHAR_SECRET_KEY_HERE

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=local
LOG_LEVEL=DEBUG

# ========================================
# Slack 알림 설정
# ========================================

# Slack 알림 설정 (선택사항)
SLACK_WEBHOOK_URL_TRADING=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK_URL_ANALYSIS=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK_URL_SCHEDULER=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLED=true

# ========================================
# Google Cloud Platform 설정
# ========================================

# GCP 프로젝트 정보
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1

# GCP 인증 (절대 경로 또는 프로젝트 루트 기준 상대 경로)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials/vertex-ai-key.json
# 예: GOOGLE_APPLICATION_CREDENTIALS=./config/vertex-ai-key.json

# Cloud Storage 버킷
GCP_BUCKET_NAME=your_bucket_name              # 일반 버킷
GCP_STAGING_BUCKET=your_staging_bucket_name   # Vertex AI 스테이징 버킷
GCS_BUCKET=quantiq-ml-models                  # ML 모델 버킷

# ========================================
# Vertex AI 설정
# ========================================

# Vertex AI CustomJob 설정
VERTEX_AI_JOB_NAME=quantiq-stock-prediction-job
VERTEX_AI_MACHINE_TYPE=n1-standard-4
VERTEX_AI_GPU_TYPE=NVIDIA_TESLA_T4
VERTEX_AI_GPU_COUNT=1
VERTEX_AI_MAX_WAIT_DURATION=1800  # 30분
VERTEX_AI_TIMEOUT=3600             # 1시간
VERTEX_AI_CONTAINER_URI=us-docker.pkg.dev/vertex-ai/training/tf-gpu.2-11.py310:latest

# 패키지 URI (선택사항 - 비어있으면 자동으로 최신 버전 조회)
VERTEX_AI_PACKAGE_URI=

# Legacy 설정 (호환성 유지)
USE_TRAINING_JOBS=true
VERTEX_AI_USE_FLEX_START=false

RUN_ECONOMIC_DATA_ON_STARTUP=false
VERTEX_AI_USE_FLEX_START=false
GITHUB_TOKEN=your_github_token_here
